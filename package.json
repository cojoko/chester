{
  "name": "chester",
  "displayName": "chester",
  "description": "Keep track of your slow Lichess games",
  "icon": "images/chester.png",
  "publisher": "cojoko",
  "version": "0.0.8",
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:chester.refresh",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "chester.refresh",
        "title": "Refresh"
      }
    ],
    "configuration": {
      "title": "chester",
      "properties": {
        "chester.username":{
          "type": "string",
          "default": "",
          "description": "Your public Lichess username"
        },
        "chester.monochrome":{
          "type": "boolean",
          "default": false,
          "description": "Controls if turn status is represented by icon shape (on) or color (off)"
        },
        "chester.refreshTimer":{
          "type": "number",
          "default": 15000,
          "description": "How often the extension fetches game status, in ms. Default is 15 seconds.",
          "minimum": 1000
        }
      }
    }
  },

  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.61.0",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "pgn-parser": "^2.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Colin-Kohli"
  }
}
